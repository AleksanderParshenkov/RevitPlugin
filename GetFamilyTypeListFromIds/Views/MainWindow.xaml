<Window x:Class="GetFamilyTypeListFromIds.Views.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GetFamilyTypeListFromIds.Views"
             mc:Ignorable="d" 
        
             WindowStartupLocation="CenterScreen"
                MinHeight="450" MinWidth="450" HorizontalAlignment="Center"
                Height="450" Width="600" Title="Уникальный выбор семейств">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="Ids" Text="" TextWrapping="Wrap" Margin="5,5,5,5"/>
        <TextBox x:Name="Result" Grid.Row="1" Text=""
                 IsReadOnly="True" TextWrapping="Wrap" Margin="5,5,5,5"/>
        <Button Grid.Row="2" Content="GO" Click="Button_Click"/>
    </Grid>
</Window>
